<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_view"
        android:layout_width="346dp"
        android:layout_height="62dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="27dp"
        android:autoText="false"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintBottom_toTopOf="@+id/btn_borrar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_borrar"
        android:layout_width="160"
        android:layout_height="70"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:background="#FFFFFF"
        android:text="@string/btn_borrar"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view" />

    <Button
        android:id="@+id/btn_cuatro"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="@string/btn_cuatro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/btn_cinco"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="21dp"
        android:text="@string/btn_cinco"
        app:layout_constraintEnd_toStartOf="@+id/btn_seis"
        app:layout_constraintStart_toEndOf="@+id/btn_cuatro"
        app:layout_constraintTop_toBottomOf="@+id/btn_ocho" />

    <Button
        android:id="@+id/btn_dos"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="21dp"
        android:text="@string/btn_dos"
        app:layout_constraintEnd_toStartOf="@+id/btn_tres"
        app:layout_constraintStart_toEndOf="@+id/btn_uno"
        app:layout_constraintTop_toBottomOf="@+id/btn_cinco" />

    <Button
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="@string/btn_siete"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_borrar" />

    <Button
        android:id="@+id/btn_tres"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="21dp"
        android:text="@string/btn_uno"
        app:layout_constraintEnd_toStartOf="@+id/btn_sumar"
        app:layout_constraintTop_toBottomOf="@+id/btn_seis" />

    <Button
        android:id="@+id/btn_nueve"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="21dp"
        android:text="@string/btn_nueve"
        app:layout_constraintEnd_toStartOf="@+id/btn_dividir"
        app:layout_constraintTop_toBottomOf="@+id/btn_ce" />

    <Button
        android:id="@+id/btn_seis"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="21dp"
        android:text="@string/btn_seis"
        app:layout_constraintEnd_toStartOf="@+id/btn_restar"
        app:layout_constraintTop_toBottomOf="@+id/btn_nueve" />

    <Button
        android:id="@+id/btn_cero"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="150dp"
        android:text="@string/btn_cero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_punto"
        app:layout_constraintTop_toBottomOf="@+id/btn_dos" />

    <Button
        android:id="@+id/btn_multiplicar"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:text="@string/btn_dividir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_view" />

    <Button
        android:id="@+id/btn_punto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="27dp"
        android:layout_marginBottom="150dp"
        android:text="@string/btn_decimal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_uno" />

    <Button
        android:id="@+id/btn_sumar"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:text="@string/btn_sumar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_restar" />

    <Button
        android:id="@+id/btn_ocho"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginStart="21dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="21dp"
        android:text="@string/btn_ocho"
        app:layout_constraintEnd_toStartOf="@+id/btn_nueve"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/btn_borrar" />

    <Button
        android:id="@+id/btn_restar"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:text="@string/btn_restar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dividir" />

    <Button
        android:id="@+id/btn_dividir"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:text="/"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_multiplicar" />

    <Button
        android:id="@+id/btn_uno"
        android:layout_width="70"
        android:layout_height="70"
        android:layout_marginStart="32dp"
        android:layout_marginTop="27dp"
        android:text="@string/btn_uno"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_cuatro" />

    <Button
        android:id="@+id/btn_igual"
        android:layout_width="160"
        android:layout_height="70"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="156dp"
        android:text="@string/btn_igual"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_tres" />

    <Button
        android:id="@+id/btn_ce"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="27dp"
        android:text="@string/btn_c"
        app:layout_constraintStart_toEndOf="@+id/btn_borrar"
        app:layout_constraintTop_toBottomOf="@+id/txt_view" />

</androidx.constraintlayout.widget.ConstraintLayout>